<%- include('../partials/_header.ejs') %>

<h1>Flight Details</h1>
<p><strong>Airline:</strong> <%= flight.airline %></p>
<p><strong>Flight Number:</strong> <%= flight.flightNo %></p>
<p><strong>Departure Airport:</strong> <%= flight.airport %></p>
<p><strong>Departure Time:</strong> <%= flight.departs.toISOString() %></p>

<h2>Tickets</h2>
<% if (tickets.length) { %>
<ul>
  <% tickets.forEach(ticket => { %>
  <li>Seat: <%= ticket.seat %>, Price: $<%= ticket.price.toFixed(2) %></li>
  <% }) %>
</ul>
<% } else { %>
<p>No tickets booked for this flight.</p>
<% } %>

<a href="/flights/<%= flight._id %>/tickets/new">Add Ticket</a>

